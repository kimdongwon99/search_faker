<form>
    <input type="text" name="query"></input>
    <input type="submit" value="검색"></input>
</form>
<table>
    <thead>
        <tr>
            <th>글 번호</th>
            <th>제목</th>
            <th>작성일자</th>
            

        </tr>
    </thead>
    <tbody>
        <% @posts.each do |p| %>
        <tr>
            <td><%= p.id%></td>
            <td><%= p.title%></td>
            <td><%=p.created_at.strftime("%y=%m-%d") %></td>
        </tr>
        <% end%>
    </tbody>
</table>